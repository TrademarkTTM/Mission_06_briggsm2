@{
    ViewData["Title"] = "Delete A Movie";
}

@model AddMovieResponce

<!--This is my Deletion Page.-->

<h2>Confirm Deletion</h2>
<h3>Are you sure that you want to delete @Model.Title?</h3>

<form method="post">
    <button type="submit" class="btn btn-danger" asp-controller="Home" asp-action="Delete">Confirm</button>
    <a class="btn btn-primary" asp-controller="Home" asp-action="MovieList">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>
