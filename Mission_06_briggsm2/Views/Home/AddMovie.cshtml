@{
    ViewData["Title"] = "Add Movie Form";
}

@model AddMovieResponce;

<!--This is my page for adding movies to the list.-->

<h1>@ViewData["Title"]</h1>
<div>
    <form method="post">
        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> @Html.ValidationMessageFor(Model => Model.CategoryId)<br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /> @Html.ValidationMessageFor(Model => Model.Title)<br />

        <label asp-for="Year">Year:</label>
        <input type="number" asp-for="Year" /> @Html.ValidationMessageFor(Model => Model.Year)<br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /> @Html.ValidationMessageFor(Model => Model.Director)<br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> @Html.ValidationMessageFor(Model => Model.Rating)<br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select> <br />

        <label asp-for="Lent_To">Lent to:</label>
        <input asp-for="Lent_To" /> <br />

        <label asp-for="Notes">Notes:</label>
        <input type="text" asp-for="Notes" /> <br />

        <button type="submit">Add Movie</button>
    </form>
</div>